// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id            Int      @id @default(autoincrement())
  titulo        String
  descripcion   String
  imagen        String
  cloudinary_id String
  precio        Float
  categoria     String
  createdAt     DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String @default("ADMIN")
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  nombre    String
  estrellas Int
  opinion   String
  createdAt DateTime @default(now())
}

model BlogPost {
  id        Int      @id @default(autoincrement())
  titulo    String
  imagen    String
  contenido String
  enlaces   String[]
  createdAt DateTime @default(now())
}
